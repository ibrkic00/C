#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<math.h>
#include<stdlib.h>
#include<malloc.h>
#include<string.h>


int main()
{
	int i, test, duljina, brojZnakova, brojac=0;
	char* x;

	printf("Upisite koliko znakova cete maksimalno unijeti: ");
	scanf("%d", &brojZnakova);
	x = (char*)malloc(brojZnakova * (sizeof(char)));

	printf("Unesite znakove: ");
	scanf("%s", x);
	duljina = strlen(x);

	for (i = 0; i < duljina; i++)
	{
		test = x[i];
		if (test % 2 == 0)
		{
			printf("%d \n", &x[i]);
			brojac++;
		}
	}

	printf("Ukupno je %d znakova sa pozitivnom vrijednosti u ASCII tablici.", brojac);
	

	system("pause");
	return 0;
}
